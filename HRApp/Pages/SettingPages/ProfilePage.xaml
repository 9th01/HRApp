                                        <Grid Visibility="Collapsed" x:Name="gridTbCMND" Grid.Column="1" Width="267" Height="36" Margin="0,49,0,20" HorizontalAlignment="Left" VerticalAlignment="Top">
                                            <TextBox Text="{Binding Path=Text, ElementName=txtCMND, Mode=TwoWay}" FontSize="16" Padding="9,0,0,0" BorderThickness="0" Grid.ColumnSpan="2" VerticalAlignment="Center"></TextBox>
